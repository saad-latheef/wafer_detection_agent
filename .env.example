# Environment Configuration Example
# Copy this file to .env and update with your actual values

# Database
DATABASE_URL=sqlite:///./wafer_analysis.db

# Model Paths (relative to project root)
MODEL_PATH_TORCH=k_cross_CNN.pt
MODEL_PATH_VIT=ViT_Wafer_Defect.h5
MODEL_PATH_EXT=my_model.weights.h5

# Model Configuration
MODEL_DEVICE=cpu
ENABLE_MODEL_CACHING=true

# Analytics Defaults
SPC_DEFAULT_DAYS=30
SPC_CONTROL_LIMIT_SIGMA=3
TREND_DEFAULT_DAYS=30

# Detection Thresholds
CONFIDENCE_THRESHOLD_LOW=0.25
CONFIDENCE_THRESHOLD_MEDIUM=0.50
CONFIDENCE_THRESHOLD_HIGH=0.75
DEFECT_PROBABILITY_SIGNIFICANT=0.10
DEFECT_PROBABILITY_MINOR=0.05

# Image Processing
IMAGE_SIZE_HEIGHT=56
IMAGE_SIZE_WIDTH=56

# Server Configuration
HOST=0.0.0.0
PORT=8000
CORS_ORIGINS=["*"]
RELOAD=true

# Email Configuration (optional - for notifications)
#SMTP_HOST=smtp.gmail.com
#SMTP_PORT=587
#SMTP_USER=your-email@gmail.com
#SMTP_PASSWORD=your-app-password

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/wafer_detection.log
LOG_MAX_BYTES=10000000
LOG_BACKUP_COUNT=5
